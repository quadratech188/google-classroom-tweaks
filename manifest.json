{
  "manifest_version": 3,
  "name": "Google Classroom Tweaks",
  "version": "0.1.7",
  "description": "Tweaks for Google Classroom.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "cookies",
    "webRequest",
    "storage",
    "nativeMessaging",
    "notifications"
  ],
  "host_permissions": [
    "*://drive.usercontent.google.com/*",
    "*://drive.google.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "blank.html" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "options_page": "settings.html",
  "browser_specific_settings": {
    "gecko": {
      "id": "gct-downloader@quadratech"
    }
  },
  "background": {
    "scripts": ["constants.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://classroom.google.com/*"],
      "js": ["constants.js", "common_ui.js", "content.js"]
    }
  ]
}
